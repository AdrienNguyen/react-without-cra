{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "typeRoots": ["config/@types", "node_modules/@types"],
        "paths": {
            "@p/*": ["public/static/*"],
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
